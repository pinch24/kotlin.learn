<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2e2c2c"
    tools:context=".PhoneBookDetailActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/n13_stroke" />

    <ImageView
        android:id="@+id/person_detail_photo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_adb" />

    <TextView
        android:id="@+id/person_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alpha"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/person_detail_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+82"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="50dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>